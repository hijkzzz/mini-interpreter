// 循环判断
even = 0
odd = 0
sum = 0
i = 1
while i < 10 {
    if i % 2 == 0 {     // event number ?
        even = even + i
    } else {
        odd = odd + i
    }
    sum = sum + (i + 1)
    i = i + 1
}
even
-odd

// 字符串数字相加
"sum = " + sum
"Hello " + "World " + sum

// 函数
def fib(n) {
    if n < 2 {
        n
    } else {
        fib(n - 1) + fib(n - 2)
    }
}
"fib(10) == " + fib(10)

// 闭包
def add(c) {
    func (x) { c = c + x }
}
add(1)(10)
c1 = add(1)
c1(2)

// 内置函数
size("test")
"print return " + itoa(print("Hello " + "World!\n"))
timestamp()
atoi("12345")

class Animal {
    age = 0
    weight = 0
}

class Dog extends Animal {
    def info() {
        "age = " + age + "; weight = " + weight
    }
}

d = Dog.new
d.age = 1
d.info()

a = [1, 2, 3, 4, 5]
a[1] = 2
a[1]
